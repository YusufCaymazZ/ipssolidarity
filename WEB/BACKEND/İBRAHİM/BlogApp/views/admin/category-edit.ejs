<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <!-- navigation -->
    <%- include("../partials/nav") %>

        <div class="conatiner mt-3">
            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <h1 class="h3 mb-3">
                                <%= category.name %> Güncelle
                            </h1>
                            <form method="post" action="/admin/categories/edit">

                                <input type="hidden" name="id" value="<%= category.id %>">

                                <div class="form-group row mb-4">
                                    <label class="col-sm-2 col-form-label">Kategori Adı</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="name" name="name"
                                            placeholder="Kategori Adı..." value="<%= category.name %>">
                                    </div>
                                </div>

                                <div class="row col-sm-3 offset-sm-5">
                                    <button class="btn btn-primary">Güncelle</button>
                                </div>
                            </form>
                            <h1 class="h5 mb-5">
                                Bu kategoride <%= countBlog %> adet blog bulunmaktadır
                            </h1>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Başlık</th>
                                        <th scope="col">Açıklama</th>
                                        <th scope="col">Kategori</th>
                                        <th scope="col">Resim</th>
                                        <th scope="col">Anasayfa</th>
                                        <th scope="col">İŞLEMLER</th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% blogs.forEach(blog=> { %>
                                        <tr>
                                            <th scope="row">
                                                <%= blog.id %>
                                            </th>
                                            <td>
                                                <%= blog.title %>
                                            </td>
                                            <td>
                                                <%- blog.description.substring(0, 50)%>...
                                            </td>
                                            <td>
                                                <%= category.name %>
                                            </td>
                                            <td>
                                                <img src="/images/<%= blog.imagePath %>" alt=""
                                                    class="img-fluid w-50 h-50">
                                            </td>
                                            <td>
                                                <%= blog.homepage ? "Evet" : "Hayır" %>
                                            </td>
                                            <td>
                                                <a href="/admin/blogs/edit/<%= blog.id %>"
                                                    class="btn btn-primary">GÜNCELLE</a>
                                            </td>
                                            <td>
                                                <a href="/admin/blogs/remove/<%= blog.id %>"
                                                    class="btn btn-danger">SİL</a>
                                            </td>
                                        </tr>
                                        <% }) %>

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>