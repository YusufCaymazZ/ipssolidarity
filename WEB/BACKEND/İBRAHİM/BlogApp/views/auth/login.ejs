<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <!-- navigation -->
    <%- include("../partials/nav") %>

        <div class="conatiner mt-3">
            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <h1 class="h3 mb-3">GİRİŞ YAP</h1>
                            <form method="post" action="/account/login">
                                <% if (typeof returnUrl !="undefined" && returnUrl) { %>
                                    <input type="hidden" name="returnUrl" value="<%= returnUrl %>">
                                    <% } %>
                                        <div class="form-group row mb-4">
                                            <label class="col-sm-2 col-form-label">Email</label>
                                            <div class="col-sm-10">
                                                <input type="email" class="form-control" id="email" name="email"
                                                    placeholder="..@..">
                                            </div>
                                        </div>

                                        <div class="form-group row mb-4">
                                            <label class="col-sm-2 col-form-label">Şifre</label>
                                            <div class="col-sm-10">
                                                <input type="password" class="form-control" id="password"
                                                    name="password">
                                            </div>
                                        </div>
                                        <% if (typeof message !="undefined" ) { %>
                                            <div class="alert alert-danger" role="alert">
                                                <%= message %>
                                            </div>
                                            <% } %>

                                                <div class="row col-sm-3 offset-sm-5 mb-3">
                                                    <button class="btn btn-primary">GİRİŞ YAP</button>
                                                </div>
                                                <div class="row col-sm-3 offset-sm-5">
                                                    <a href="/account/reset-password" class="btn btn-primary">Şifremi
                                                        Unuttum</a>
                                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                    console.error(error);
                });
        </script>
</body>

</html>