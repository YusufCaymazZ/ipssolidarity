<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <!-- navigation -->
    <%- include("../partials/nav") %>

        <div class="conatiner mt-3">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group p-5 pt-0">
                        <!-- menu -->
                        <%- include('../partials/category-list.ejs' , categories) %>
                    </div>
                </div>
                <div class="col-md-9  p-5 pt-0">
                    <h1 class="h3 mb-3">BLOG LİSTESİ</h1>
                    <!-- card body -->
                    <% if (blogCount==0) { %>
                        <p>Bu kategoride blog bulunamadı</p>
                        <% } %>
                            <% blogs.forEach(blog=> { %>
                                <%- include('../partials/blog-list.ejs',blog) %>
                                    <% }) %>

                                        <% if (blogCount> 3) { %>
                                            <!-- pagination -->
                                            <%- include("../partials/pagination") %>
                                                <% } %>

                </div>
            </div>
        </div>
</body>

</html>